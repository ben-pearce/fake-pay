<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactions</from-outcome>
            <to-view-id>/users/transactions.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>request</from-outcome>
            <to-view-id>/users/request.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>payment</from-outcome>
            <to-view-id>/users/payment.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>pending</from-outcome>
            <to-view-id>/users/pending.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>users</from-outcome>
            <to-view-id>/admins/users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>transactions</from-outcome>
            <to-view-id>/admins/transactions.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/admins/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
